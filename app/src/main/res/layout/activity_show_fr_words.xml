<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/view_en"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/background2"    tools:context=".show_words">    <TextView        android:id="@+id/show_sentences"        android:layout_width="113dp"        android:layout_height="53dp"        android:fontFamily="@font/aldrich"        android:padding="10dp"        android:shadowColor="#FFFFFF"        android:text="words"        android:textColor="#FA0808"        android:textSize="24sp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.023" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerView_fr"        android:layout_width="376dp"        android:layout_height="595dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.794" />    <com.google.android.material.floatingactionbutton.FloatingActionButton        android:id="@+id/search_fr"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="16dp"        android:layout_marginBottom="56dp"        android:clickable="true"        app:backgroundTint="#4E4C4C"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:srcCompat="@drawable/ic_baseline_update_24" /></androidx.constraintlayout.widget.ConstraintLayout>